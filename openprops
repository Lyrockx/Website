/* Import the open-props library */
@import "https://unpkg.com/open-props";

/* Set some custom properties */
:root {
  --open-props-background-color: #f2f2f2;
  --open-props-text-color: #333;
}

/* Set global styles */
html, body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: var(--open-props-background-color);
  color: var(--open-props-text-color);
}

/* Set styles for the header */
header {
  background-color: #333;
  color: white;
  padding: 1rem;
}

/* Set styles for the main content area */
main {
  max-width: 800px;
  margin: 0 auto;
  padding: 1rem;
}

/* Set styles for links */
a {
  color: blue;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}
